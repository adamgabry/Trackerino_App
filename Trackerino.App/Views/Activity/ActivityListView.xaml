<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Trackerino.App.Views"
             xmlns:vm="clr-namespace:Trackerino.App.ViewModels"
             xmlns:conv="clr-namespace:Trackerino.App.Converters"
             xmlns:m="clr-namespace:Trackerino.BL.Models;assembly=Trackerino.BL"
             x:DataType="vm:ActivityListViewModel"
             x:Name="ActivityListViewRoot"
             x:Class="Trackerino.App.Views.Activity.ActivityListView"

             Title="Activities">

    <StackLayout Padding="20">
        <Grid HorizontalOptions="FillAndExpand" RowDefinitions="Auto, *"
              RowSpacing="20">
            <Label Grid.Row="0"
                   FontSize="24"
                   Text="History" />

            <Button Grid.Row="0"
                    Padding="12, 6"
                    HorizontalOptions="End" VerticalOptions="Start"
                    Text="New activity"
                    Command="{Binding GoToCreateCommand}"
                    CornerRadius="25"
                    FontFamily="MontserratMedium"
                    FontSize="14" />

            <ListView Grid.Row="1"
              Margin="0,10"
              ItemsSource="{Binding Activities}"
              RowHeight="70">
                <ListView.Header>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Text="Start" />
                        <Label Grid.Column="1" Text="End" />
                        <Label Grid.Column="2" Text="Tag" />
                        <Label Grid.Column="3" Text="Description" />
                        <Label Grid.Column="4" Text="ID" />
                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="m:ActivityListModel">
                        <ViewCell>
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                                       Text="{Binding StartDateTime, Converter={StaticResource DateTimeToStringConverter}}"
                                       VerticalOptions="Center" />

                                <Label Grid.Column="1"
                                       Text="{Binding EndDateTime, Converter={StaticResource DateTimeToStringConverter}}"
                                       VerticalOptions="Center" />

                                <Label Grid.Column="2"
                                       Text="{Binding Tag }"
                                       VerticalOptions="Center" />

                                <Label Grid.Column="3"
                                       Text="{Binding Description }"
                                       VerticalOptions="Center" />

                                <Label Grid.Column="4"
                                       Text="{Binding Id}"
                                       VerticalOptions="Center" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </StackLayout>

</views:ContentPageBase>

