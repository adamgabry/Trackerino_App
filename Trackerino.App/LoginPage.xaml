<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trackerino.App.LoginPage">

    <StackLayout Margin="20">
        <Picker Title="Select user">
            <Picker.Items>
                <x:String>John Appleseed</x:String>
            </Picker.Items>
        </Picker>
        <StackLayout>
            <Button Text="Login"
                    ImageSource="Resources/Images/icon_open.png"
                    ContentLayout="Left, 20"/>
            <Button Text="Edit"/>
        </StackLayout>
        <Button Text="New user"/>
    </StackLayout>

</ContentPage>
